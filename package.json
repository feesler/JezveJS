{
    "name": "jezvejs-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "module": "dist/js/index.js",
    "description": "JavaScript utility and components library",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/feesler/JezveJS.git"
    },
    "bugs": {
        "url": "https://github.com/feesler/JezveJS/issues"
    },
    "homepage": "https://github.com/feesler/JezveJS#readme",
    "scripts": {
        "test": "node ./tests/index.js",
        "test-partial": "node ./tests/index.js datePicker",
        "all": "npm-run-all lint build test",
        "lint": "npm-run-all --parallel lint-src lint-style lint-tests",
        "lint-src": "eslint --quiet ./packages/jezvejs/src/**/*.js ./demo/src/**/*.js",
        "lint-style": "npx stylelint packages/jezvejs/src/**/*.scss demo/src/**/*.scss",
        "lint-tests": "eslint -c ./tests.eslintrc.json --quiet ./tests/ ./packages/jezvejs-test/**/*.js ./config/ ./scripts/",
        "debug": "node --inspect-brk ./tests/index.js",
        "deploy": "node ./scripts/deploy.js",
        "build-deploy": "npm-run-all build deploy",
        "build": "npx webpack --progress -c ./config/demo.js -c ./config/prod.js -m",
        "build-dev": "npx webpack --progress -c ./config/demo.js -c ./config/dev.js -m",
        "build-all": "npm-run-all build build-tests",
        "build-src": "npx webpack --progress -c ./config/common.js -c ./config/prod.js -m",
        "build-src-dev": "npx webpack --progress -c ./config/common.js -c ./config/dev.js -m",
        "build-tests": "npx webpack --progress -c ./config/tests.js",
        "serve": "npx webpack serve -c ./config/demo.js -c ./config/dev.js -m",
        "i-jezvejs": "npm install -w jezvejs",
        "p-jezvejs": "npm publish -w jezvejs",
        "i-jezvejs-test": "npm install -w jezvejs-test",
        "p-jezvejs-test": "npm publish -w jezvejs-test",
        "update": "npm update --save",
        "publish": "npm-run-all i-jezvejs update build p-jezvejs",
        "publish-test": "npm-run-all i-jezvejs-test update p-jezvejs-test",
        "release": "npm-run-all publish deploy",
        "ver-major": "npm version major -w jezvejs",
        "ver-minor": "npm version minor -w jezvejs",
        "ver-patch": "npm version patch -w jezvejs",
        "release-major": "npm-run-all all ver-major release",
        "release-minor": "npm-run-all all ver-minor release",
        "release-patch": "npm-run-all all ver-patch release"
    },
    "author": "Henry Feesler",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.21.8",
        "@babel/eslint-parser": "^7.21.8",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-transform-regenerator": "^7.21.5",
        "@babel/plugin-transform-runtime": "^7.21.4",
        "@babel/preset-env": "^7.21.5",
        "astroturf": "^1.2.0",
        "autoprefixer": "^10.4.14",
        "babel-loader": "^8.3.0",
        "browserslist": "^4.21.5",
        "commonjs-variables-for-esmodules": "^1.1.0",
        "css-loader": "^5.2.7",
        "del-cli": "^3.0.1",
        "dotenv": "^16.0.3",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-import": "^2.27.5",
        "html-webpack-plugin": "^5.5.1",
        "jezve-test": "^1.10.0",
        "jezvejs-test": "^1.8.2",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^8.3.1",
        "postcss-loader": "^5.3.0",
        "sass": "^1.62.1",
        "sass-loader": "^13.2.2",
        "ssh2-sftp-client": "^9.1.0",
        "style-loader": "^2.0.0",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "webpack": "^5.82.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.13.3",
        "webpack-merge": "^5.8.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.21.5",
        "core-js": "^3.30.1",
        "whatwg-fetch": "^3.6.2"
    },
    "workspaces": [
        "packages/*",
        "demo"
    ]
}
