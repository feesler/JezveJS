{
    "name": "jezvejs",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "module": "dist/js/index.js",
    "files": [
        "src",
        "tests"
    ],
    "description": "JavaScript utility and components library",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/feesler/JezveJS.git"
    },
    "bugs": {
        "url": "https://github.com/feesler/JezveJS/issues"
    },
    "homepage": "https://github.com/feesler/JezveJS#readme",
    "scripts": {
        "test": "node ./tests/index.js",
        "test-partial": "node ./tests/index.js -p",
        "all": "npm-run-all lint build test",
        "lint": "npm-run-all lint-src lint-style lint-demo-src lint-demo-style lint-tests",
        "lint-src": "eslint --quiet ./packages/jezvejs/src/**/*.js",
        "lint-tests": "eslint -c ./tests.eslintrc.json --quiet ./tests/ ./packages/jezvejs-test/**/*.js",
        "lint-style": "npx stylelint packages/jezvejs/src/**/*.scss",
        "lint-demo-src": "eslint --quiet ./demo/src/**/*.js",
        "lint-demo-style": "npx stylelint demo/src/**/*.scss",
        "debug": "node --inspect-brk ./tests/index.js",
        "build": "npm-run-all build-src build-demo",
        "build-dev": "npm-run-all build-src-dev build-demo-dev",
        "build-all": "npm-run-all build build-tests",
        "build-src": "npx webpack --progress --config ./webpack.common.js --config ./webpack.prod.js --merge",
        "build-src-dev": "npx webpack --progress --config ./webpack.common.js --config ./webpack.dev.js --merge",
        "build-demo": "npx webpack --progress --config ./webpack.demo.js --config ./webpack.prod.js --merge",
        "build-local": "npx webpack --progress --config ./webpack.demo.js --config ./webpack.prod.js --config ./webpack.local.js --merge",
        "build-demo-dev": "npx webpack --progress --config ./webpack.demo.js  --config ./webpack.dev.js --merge",
        "build-tests": "npx webpack --progress --config ./webpack.tests.js",
        "serve": "webpack serve -c ./webpack.dev.js"
    },
    "author": "Henry Feesler",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.11.5",
        "@babel/core": "^7.13.16",
        "@babel/eslint-parser": "^7.13.14",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-transform-regenerator": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.13.15",
        "astroturf": "^1.0.0-beta.21",
        "autoprefixer": "^10.2.5",
        "babel-loader": "^8.2.2",
        "browserslist": "^4.16.5",
        "commonjs-variables-for-esmodules": "^1.1.0",
        "css-loader": "^5.2.4",
        "del-cli": "^3.0.1",
        "eslint": "^7.11.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-import-resolver-webpack": "^0.13.0",
        "eslint-plugin-import": "^2.22.1",
        "html-webpack-plugin": "^5.3.1",
        "jezve-test": "^0.21.2",
        "jezvejs-test": "^1.0.1",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^8.3.1",
        "postcss-loader": "^5.2.0",
        "sass": "^1.54.0",
        "sass-loader": "^13.0.2",
        "style-loader": "^2.0.0",
        "stylelint": "^13.13.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0",
        "webpack": "^5.35.1",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^4.8.1",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "@babel/runtime": "^7.11.2",
        "core-js": "^3.6.5",
        "whatwg-fetch": "^3.4.0"
    }
}
