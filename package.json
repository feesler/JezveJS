{
    "name": "jezvejs-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "module": "dist/js/index.js",
    "description": "JavaScript utility and components library",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/feesler/JezveJS.git"
    },
    "bugs": {
        "url": "https://github.com/feesler/JezveJS/issues"
    },
    "homepage": "https://github.com/feesler/JezveJS#readme",
    "scripts": {
        "test": "node ./tests/index.js",
        "all": "npm-run-all lint build test",
        "lint": "npm-run-all --parallel lint-src lint-style lint-tests",
        "lint-src": "eslint --quiet ./packages/jezvejs/src/**/*.js ./packages/utils/**/*.js ./demo/src/**/*.js",
        "lint-style": "npx stylelint packages/jezvejs/src/**/*.scss demo/src/**/*.scss",
        "lint-tests": "eslint -c ./tests.eslintrc.json --quiet ./tests/ ./packages/jezvejs-test/**/*.js ./config/ ./scripts/",
        "debug": "node --inspect-brk ./tests/index.js",
        "deploy": "node ./scripts/deploy.js",
        "build": "npx webpack --progress -c ./config/demo.js -c ./config/prod.js -m",
        "build-dev": "npx webpack --progress -c ./config/demo.js -c ./config/dev.js -m",
        "build-all": "npm-run-all build build-tests",
        "build-src": "npx webpack --progress -c ./config/common.js -c ./config/prod.js -m",
        "build-src-dev": "npx webpack --progress -c ./config/common.js -c ./config/dev.js -m",
        "build-tests": "npx webpack --progress -c ./config/tests.js",
        "start": "npx webpack serve -c ./config/demo.js -c ./config/dev.js -m",
        "commit-version": "node ./scripts/commit-version.js",
        "release": "node ./scripts/release.js"
    },
    "author": "Henry Feesler",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.24.8",
        "@babel/core": "^7.24.9",
        "@babel/eslint-parser": "^7.24.8",
        "@babel/plugin-transform-regenerator": "^7.24.7",
        "@babel/plugin-transform-runtime": "^7.24.7",
        "@babel/preset-env": "^7.24.8",
        "@jezvejs/release-tools": "^0.5.1",
        "astroturf": "^1.2.0",
        "autoprefixer": "^10.4.19",
        "babel-loader": "^8.3.0",
        "browserslist": "^4.23.2",
        "commonjs-variables-for-esmodules": "^1.1.0",
        "css-loader": "^5.2.7",
        "dotenv": "^16.4.5",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-import-resolver-webpack": "^0.13.8",
        "eslint-plugin-import": "^2.29.1",
        "html-webpack-plugin": "^5.6.0",
        "jezve-test": "^2.3.0",
        "jezvejs-test": "^1.14.8",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^8.3.1",
        "postcss-loader": "^5.3.0",
        "progress": "^2.0.3",
        "sass": "^1.77.8",
        "sass-loader": "^13.3.3",
        "shelljs": "^0.8.5",
        "ssh2-sftp-client": "^9.1.0",
        "style-loader": "^2.0.0",
        "stylelint": "^15.11.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "webpack": "^5.93.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.15.2",
        "webpack-merge": "^5.10.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.24.8",
        "@jezvejs/datetime": "^1.1.0",
        "@jezvejs/types": "^1.0.0",
        "core-js": "^3.37.1",
        "whatwg-fetch": "^3.6.20"
    },
    "workspaces": [
        "packages/*",
        "packages/utils/*",
        "demo"
    ]
}
