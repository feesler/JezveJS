{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": false
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-continue": ["warn"],
        "class-methods-use-this": ["warn"],
        "import/prefer-default-export": ["warn"],
        "import/extensions": ["error", "always"]
    }
}
