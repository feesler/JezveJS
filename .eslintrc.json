{
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "env": {
        "browser": true,
        "node": false
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-continue": [
            "warn"
        ],
        "no-console": [
            "error"
        ],
        "class-methods-use-this": [
            "warn"
        ],
        "import/prefer-default-export": [
            "warn"
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}